<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.dmorales.evaluacion2018.fragments.ListadoSalidaFragment">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="5dp"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ELEMENTOS DE SALIDA"
            android:layout_marginTop="@dimen/margin5dp"
            android:textSize="20sp"
            android:gravity="center"
            android:textColor="@color/rojo"/>
        <TextView
            android:id="@+id/listadosalida_txtNumero"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Total registros:"
            android:gravity="center"
            android:layout_marginBottom="@dimen/margin5dp"
            android:textColor="@color/colorAccent"/>
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary">
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:padding="5dp"
                android:background="@color/colorAccent">
                <TextView
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:textColor="@color/icons"
                    android:layout_height="wrap_content"
                    android:text="DNI"
                    />
                <TextView
                    android:layout_weight="4"
                    android:layout_width="0dp"
                    android:textColor="@color/icons"
                    android:layout_height="wrap_content"
                    android:text="NOMBRES Y APELLIDOS"
                    />
                <TextView
                    android:layout_weight="3"
                    android:layout_width="0dp"
                    android:textColor="@color/icons"
                    android:layout_height="wrap_content"
                    android:text="SEDE"
                    />
                <TextView
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:textColor="@color/icons"
                    android:layout_height="wrap_content"
                    android:text="AULA"
                    />
                <TextView
                    android:layout_weight="2"
                    android:layout_width="0dp"
                    android:textColor="@color/icons"
                    android:layout_height="wrap_content"
                    android:text="FECHA Y HORA"
                    />
            </LinearLayout>
        </android.support.v7.widget.CardView>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <android.support.v7.widget.RecyclerView
                android:id="@+id/listadosalida_recycler"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"/>
            <android.support.design.widget.FloatingActionButton
                android:id="@+id/listadosalida_btnUpload"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:layout_margin="10dp"
                android:src="@drawable/ic_file_upload"
                android:tint="@color/colorIcons"
                />
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>