<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context="com.example.dmorales.evaluacion2018.fragments.RegistroFragment">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="REGISTRO DE ASISTENCIA"
        android:layout_marginTop="@dimen/margin5dp"
        android:textSize="20sp"
        android:gravity="center"
        android:textColor="@color/verde"/>
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <EditText
        android:id="@+id/registro_edtDni"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="numberPassword"
        android:maxLength="8"
        android:hint="Enter search key" />

    <ImageButton
        android:id="@+id/registro_btnBuscar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:src="@drawable/ic_search"
        android:layout_centerVertical="true"
        android:layout_margin="5dp"
        android:text="Button"/>

</RelativeLayout>
<LinearLayout
    android:focusable="false"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <android.support.v7.widget.CardView
        android:id="@+id/registro_cvYaRegistrado"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:visibility="gone"
        android:layout_gravity="center"
        app:cardBackgroundColor="#d7ccc8"
        android:orientation="vertical">
        <LinearLayout
            android:orientation="horizontal"
            android:gravity="center"
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_not_interested"
                android:tint="#3e2723"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:gravity="center"
                android:textStyle="bold"
                android:textColor="#3e2723"
                android:text="DNI CON  YA REGISTRADA"/>
        </LinearLayout>
    </android.support.v7.widget.CardView>
    <android.support.v7.widget.CardView
        android:id="@+id/registro_cvNoRegistrado"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:visibility="gone"
        android:layout_gravity="center"
        app:cardBackgroundColor="#F8BBD0"
        android:orientation="vertical">
        <LinearLayout
            android:orientation="horizontal"
            android:gravity="center"
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_not_interested"
                android:tint="#C2185B"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:gravity="center"
                android:textStyle="bold"
                android:textColor="#C2185B"
                android:text="DNI NO REGISTRADO EN EL PADRON"/>
        </LinearLayout>
    </android.support.v7.widget.CardView>
    <android.support.v7.widget.CardView
        android:id="@+id/registro_cvRegistro"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:visibility="gone"
        app:cardBackgroundColor="@color/colorPrimary"
        android:orientation="vertical">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp">
            <TextView
                android:id="@+id/registro_txtCargo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="INFORMATICO LOCAL"
                android:textStyle="bold"
                android:layout_marginBottom="5dp"
                android:textColor="@color/icons"
                android:textSize="20sp"/>
            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="5dp">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:tint="@color/colorPrimary"
                        android:src="@drawable/ic_credit_card"
                        />

                    <TextView
                        android:id="@+id/registro_txtDni"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="43372489"
                        android:textColor="@color/colorPrimary"
                        android:textSize="20sp"
                        android:textStyle="bold" />
                </LinearLayout>
            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="5dp">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:tint="@color/colorPrimary"
                        android:src="@drawable/ic_person"
                        />
                    <TextView
                        android:id="@+id/registro_txtNombres"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="MORALES RETAMOZO DENIS RICARDO"
                        android:textStyle="bold"
                        android:textColor="@color/colorPrimary"
                        android:textSize="20sp"/>
                </LinearLayout>
            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="5dp">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:tint="@color/colorPrimary"
                        android:src="@drawable/ic_place"
                        />
                    <TextView
                        android:id="@+id/registro_txtSede"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="AMAZONAS - CHACHAPOYAS"
                        android:textStyle="bold"
                        android:textColor="@color/colorPrimary"
                        android:textSize="20sp"/>
                </LinearLayout>
            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="5dp">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:tint="@color/colorPrimary"
                        android:src="@drawable/ic_account_balance"
                        />
                    <TextView
                        android:id="@+id/registro_txtLocal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="INSTITUCIÓN EDUCATIVA MIGUEL RUBIO"
                        android:textStyle="bold"
                        android:textColor="@color/colorPrimary"
                        android:textSize="20sp"/>
                </LinearLayout>
            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="5dp">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:tint="@color/colorPrimary"
                        android:src="@drawable/ic_near_me"
                        />
                    <TextView
                        android:id="@+id/registro_txtAula"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="AULA 2"
                        android:textStyle="bold"
                        android:textColor="@color/colorPrimary"
                        android:textSize="20sp"/>
                </LinearLayout>
            </android.support.v7.widget.CardView>

        </LinearLayout>
    </android.support.v7.widget.CardView>
    <android.support.v7.widget.CardView
        android:id="@+id/registro_cvError"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="5dp"
        android:visibility="gone"
        app:cardBackgroundColor="#607d8b"
        android:orientation="vertical">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:src="@drawable/ic_error"
                        android:tint="@color/icons"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:text="ERROR"
                        android:gravity="center"
                        android:textColor="@color/icons"/>
                </LinearLayout>
                <TextView
                    android:id="@+id/registro_error_txtCargo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="COORDINADOR DEL LOCAL Y ASISTENTE DEL CORRDINADOR DEL LOCAL"
                    android:textStyle="bold"
                    android:layout_marginTop="5dp"
                    android:textColor="@color/icons"
                    android:textSize="20sp"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="@color/icons"
                    android:gravity="center"
                    android:text="Su local de votación es:"/>
                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="5dp">
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="30dp"
                            android:tint="#455a64"
                            android:src="@drawable/ic_place"
                            />
                        <TextView
                            android:id="@+id/registro_error_txtSede"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="ANCASH - CHIMBOTE"
                            android:textStyle="bold"
                            android:textColor="#455a64"
                            android:textSize="20sp"/>
                    </LinearLayout>
                </android.support.v7.widget.CardView>
                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:padding="5dp">
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="30dp"
                            android:tint="#455a64"
                            android:src="@drawable/ic_account_balance"
                            />
                        <TextView
                            android:id="@+id/registro_error_txtLocal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="INSTITUCIÓN EDUCATIVA INMACULADA DE LA MERCED"
                            android:textStyle="bold"
                            android:textColor="#455a64"
                            android:textSize="20sp"/>
                    </LinearLayout>
                </android.support.v7.widget.CardView>
            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>

</LinearLayout>

